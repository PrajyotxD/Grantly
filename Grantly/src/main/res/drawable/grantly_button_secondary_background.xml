<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/grantly_button_secondary_background_pressed" />
            <stroke
                android:width="1dp"
                android:color="@color/grantly_button_secondary_border" />
            <corners android:radius="@dimen/grantly_button_corner_radius" />
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grantly_button_secondary_background" />
            <stroke
                android:width="1dp"
                android:color="@color/grantly_text_secondary" />
            <corners android:radius="@dimen/grantly_button_corner_radius" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grantly_button_secondary_background" />
            <stroke
                android:width="1dp"
                android:color="@color/grantly_button_secondary_border" />
            <corners android:radius="@dimen/grantly_button_corner_radius" />
        </shape>
    </item>
    
</selector>