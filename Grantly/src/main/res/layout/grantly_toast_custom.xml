<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/grantly_toast_padding"
    android:background="@drawable/grantly_toast_background"
    android:gravity="center_vertical">

    <!-- Toast Icon -->
    <ImageView
        android:id="@+id/grantly_toast_icon"
        android:layout_width="@dimen/grantly_toast_icon_size"
        android:layout_height="@dimen/grantly_toast_icon_size"
        android:layout_marginEnd="@dimen/grantly_toast_spacing"
        android:src="@drawable/grantly_ic_permission"
        android:contentDescription="@string/grantly_toast_icon_desc" />

    <!-- Toast Message -->
    <TextView
        android:id="@+id/grantly_toast_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/grantlyToastTextAppearance"
        android:textColor="?attr/grantlyToastTextColor"
        android:text="@string/grantly_toast_permission_granted" />

</LinearLayout>