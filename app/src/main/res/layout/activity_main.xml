<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grantly Permission Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to test permissions"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Basic Permission Tests -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Permission Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Camera Permission"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btnLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Location Permission"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btnMultiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Multiple Permissions"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button" />

        <!-- Lazy vs Eager Tests -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lazy vs Eager Mode Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnLazyMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lazy Permission Request"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnEagerMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eager Permission Request"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Special Permissions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Permissions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Alert Window"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <Button
            android:id="@+id/btnNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Permission (API 33+)"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <Button
            android:id="@+id/btnBackgroundLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background Location"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Custom UI Demonstrations -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom UI Demonstrations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnCustomDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Dialog Provider"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <Button
            android:id="@+id/btnCustomRationale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Rationale Provider"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <Button
            android:id="@+id/btnDenialBehavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denial Behavior Demo"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Utility Functions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utility Functions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnOpenSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open App Settings"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.UnelevatedButton" />

        <Button
            android:id="@+id/btnCheckManifest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Manifest Permissions"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.UnelevatedButton" />

    </LinearLayout>

</ScrollView>